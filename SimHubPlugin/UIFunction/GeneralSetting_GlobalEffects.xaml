<UserControl x:Class="User.PluginSdkDemo.UIFunction.GeneralSetting_GlobalEffects"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:User.PluginSdkDemo.UIFunction"
             xmlns:localUI="clr-namespace:User.PluginSdkDemo.UIElement"
             xmlns:localFunction="clr-namespace:User.PluginSdkDemo.UIFunction"
             xmlns:styles="clr-namespace:SimHub.Plugins.Styles;assembly=SimHub.Plugins" mc:Ignorable="d" 
             xmlns:ui="clr-namespace:SimHub.Plugins.UI;assembly=SimHub.Plugins" 
             xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             d:DesignHeight="190" d:DesignWidth="540"
             d:DataContext="{d:DesignInstance Type=localFunction:GeneralSetting_GlobalEffects}">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/DiyActivePedal;component/UIStyles/DefaultStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Border Background="#7F4E4E4E" Height="190" CornerRadius="5,5,5,5" BorderThickness="0,2,0,0" >
            <StackPanel HorizontalAlignment="Left" Height="190" VerticalAlignment="Top" Width="540">
                <StackPanel Height="20" Width="540" Orientation="Horizontal">
                    <Label Content="Global Effects Setting" Height="15" Width="150" Padding="0,0,0,0" VerticalContentAlignment="Center" FontFamily="Arial Black" HorizontalAlignment="Left" Margin="70,0,0,0"/>
                </StackPanel>
                <StackPanel Width="400" Height="50">
                    <localUI:SliderWithLabel x:Name="Slider_MinForceForEffects" SliderLength="400" SliderName="Threshold Force for Effect" SliderValue="0" MinValue="0" MaxValue="10" SliderValueChanged="Slider_MinForceForEffects_SliderValueChanged" TickFrequency="1" Unit="kg" ToolTip="This is the minimum force that must be reached or exceeded for the effect to occur. A value of 0 indicates no force restriction."/>
                </StackPanel>
            </StackPanel>

        </Border>
    </Grid>
</UserControl>
