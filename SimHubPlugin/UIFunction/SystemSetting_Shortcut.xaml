                        </StackPanel>
                        <styles:SHButtonPrimary x:Name="Btn_Shortcut_3" Click="Btn_Shortcut_3_Click" Width="30" Content="Clear" Height="20" Margin="5,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="0,0,0,0" VerticalContentAlignment="Center" FontFamily="Arial" FontSize="10" MinHeight="20" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="15,2,0,0">
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Profile 4:" Height="20" Width="50" HorizontalAlignment="Left" FontFamily="Arial Black" VerticalContentAlignment="Center" FontSize="10" Padding="0,5,0,5"/>
                            <TextBox x:Name="Textbox_ShortcutName4" Text="{Binding Plugin.Settings.ProfileShortcutName[4], Mode=TwoWay}" Width="150" MinHeight="20" Height="20" BorderThickness="0,0,0,0" Margin="5,0,0,0" VerticalContentAlignment="Center" FontSize="10" FontFamily="Arial"/>
                            <ComboBox x:Name="ComboBox4"
                                  ItemsSource="{Binding ProfileList}"
                                  DisplayMemberPath="ListNameOrig"  
                                  SelectedValuePath="FileName"    
                                  SelectedValue="{Binding ShortcutProfile4, Mode=TwoWay}"
                                  Width="200" Margin="5,0,0,0" HorizontalAlignment="Left" Height="20" MinHeight="20" VerticalAlignment="Center" Padding="0,0,0,0" BorderThickness="0,0,0,0"/>
                        </StackPanel>
                        <styles:SHButtonPrimary x:Name="Btn_Shortcut_4" Click="Btn_Shortcut_4_Click" Width="30" Content="Clear" Height="20" Margin="5,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="0,0,0,0" VerticalContentAlignment="Center" FontFamily="Arial" FontSize="10" MinHeight="20" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="15,2,0,0">
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Profile 5:" Height="20" Width="50" HorizontalAlignment="Left" FontFamily="Arial Black" VerticalContentAlignment="Center" FontSize="10" Padding="0,5,0,5"/>
                            <TextBox x:Name="Textbox_ShortcutName5" Text="{Binding Plugin.Settings.ProfileShortcutName[5], Mode=TwoWay}" Width="150" MinHeight="20" Height="20" BorderThickness="0,0,0,0" Margin="5,0,0,0" VerticalContentAlignment="Center" FontSize="10" FontFamily="Arial"/>
                            <ComboBox x:Name="ComboBox5"
                                  ItemsSource="{Binding ProfileList}"
                                  DisplayMemberPath="ListNameOrig"  
                                  SelectedValuePath="FileName"    
                                  SelectedValue="{Binding ShortcutProfile5, Mode=TwoWay}"
