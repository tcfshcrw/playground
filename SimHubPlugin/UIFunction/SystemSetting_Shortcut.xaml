                            <TextBox x:Name="Textbox_ShortcutName3" Text="{Binding Plugin.Settings.ProfileShortcutName[3], Mode=TwoWay}" Width="150" MinHeight="20" Height="20" BorderThickness="0,0,0,0" Margin="5,0,0,0" VerticalContentAlignment="Center" FontSize="10" FontFamily="Arial"/>
