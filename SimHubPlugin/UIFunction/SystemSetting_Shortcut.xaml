                        </StackPanel>
                        <styles:SHButtonPrimary x:Name="Btn_Shortcut_1" Click="Btn_Shortcut_1_Click" Width="30" Content="Clear" Height="20" Margin="5,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="0,0,0,0" VerticalContentAlignment="Center" FontFamily="Arial" FontSize="10" MinHeight="20" />
                    </StackPanel>
