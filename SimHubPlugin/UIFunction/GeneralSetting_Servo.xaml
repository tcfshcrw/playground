<UserControl x:Class="User.PluginSdkDemo.UIFunction.GeneralSetting_Servo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:User.PluginSdkDemo.UIFunction"
             xmlns:localUI="clr-namespace:User.PluginSdkDemo.UIElement"
             xmlns:localFunction="clr-namespace:User.PluginSdkDemo.UIFunction"
             xmlns:styles="clr-namespace:SimHub.Plugins.Styles;assembly=SimHub.Plugins" mc:Ignorable="d" 
             xmlns:ui="clr-namespace:SimHub.Plugins.UI;assembly=SimHub.Plugins" 
             xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             d:DesignHeight="190" d:DesignWidth="540"
             d:DataContext="{d:DesignInstance Type=localFunction:GeneralSetting_Servo}">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/DiyActivePedal;component/UIStyles/DefaultStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Border Background="#7F4E4E4E" Height="190" CornerRadius="5,5,5,5" BorderThickness="0,2,0,0" >
            
            <StackPanel HorizontalAlignment="Left" Height="190" VerticalAlignment="Top" Width="540">
                <StackPanel Height="20" Width="540" Orientation="Horizontal">
                    <Label Content="Servo settings" Height="15" Width="150" Padding="0,0,0,0" VerticalContentAlignment="Center" FontFamily="Arial Black" HorizontalAlignment="Left" Margin="70,0,0,0"/>
                </StackPanel>
                <StackPanel Width="400" Height="50" Margin="0,0,0,0">
                    <Label  Width="400" Foreground="White" RenderTransformOrigin="0.5,0.5" Canvas.Top="3" FontSize="10" FontFamily="Arial" Canvas.Left="5" HorizontalAlignment="Left" VerticalAlignment="Top" Content="Servo position smoothing factor  (Pr2.22)" Height="10" Padding="0,0,0,0"/>
                    <localUI:SliderWithLabel x:Name="Slider_PositionFilter" SliderLength="400" SliderName="value" SliderValue="0" MinValue="0" MaxValue="50" SliderValueChanged="PosFilterValueChanged" ToolTip="Adjust the value to enable servo smoothness filter, the filter may cause pedal oscillation. set 0 as default."/>
                </StackPanel>
                <StackPanel Width="400" Height="50">
                    <localUI:SliderWithLabel x:Name="Slider_ServoRatioOfInertia" SliderLength="400" SliderName="Ratio of Inertia (Pr0.04)" SliderValue="1" MinValue="1" MaxValue="200" SliderValueChanged="Slider_ServoRatioOfInertia_SliderValueChanged" TickFrequency="1" Unit="%" ToolTip="Increase the value for stiffer pedal. Will increase likelihood of pedal oscillation."/>
                </StackPanel>
            </StackPanel>

        </Border>
    </Grid>
</UserControl>
